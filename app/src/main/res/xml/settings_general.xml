<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android = "http://schemas.android.com/apk/res/android"
                  android:layout_width = "match_parent"
                  android:layout_height = "match_parent">

	<PreferenceCategory
		android:title = "Notifications">
		<SwitchPreference
			android:defaultValue = "@string/summaryOn"
			android:icon = "@drawable/notification"
			android:key = "@string/notifications_key"
			android:summaryOff = "@string/summaryOff"
			android:summaryOn = "@string/summaryOn"
			android:title = "@string/notifications_label" />
		<SwitchPreference
			android:defaultValue = "@string/summaryOn"
			android:icon = "@drawable/sound"
			android:key = "@string/sound_key"
			android:summaryOff = "@string/summaryOff"
			android:summaryOn = "@string/summaryOn"
			android:title = "@string/sound_label" />
		<SwitchPreference
			android:defaultValue = "@string/summaryOn"
			android:icon = "@drawable/vibrate"
			android:key = "@string/vibration_key"
			android:summaryOff = "@string/summaryOff"
			android:summaryOn = "@string/summaryOn"
			android:title = "@string/vibration_label" />

		<PreferenceScreen
			android:icon = "@drawable/subscribe"
			android:title = "Features">
			<CheckBoxPreference
				android:defaultValue = "@string/subscribedOn"
				android:icon = "@drawable/code"
				android:key = "@string/subscription_map_key"
				android:summaryOff = "@string/subscribedOff"
				android:summaryOn = "@string/subscribedOn"
				android:title = "@string/subscription_map_label" />
			<CheckBoxPreference
				android:defaultValue = "@string/subscribedOn"
				android:icon = "@drawable/web"
				android:key = "@string/subscription_face_key"
				android:summaryOff = "@string/subscribedOff"
				android:summaryOn = "@string/subscribedOn"
				android:title = "@string/subscription_face_label" />
			<CheckBoxPreference
				android:defaultValue = "@string/summaryOn"
				android:icon = "@drawable/design"
				android:key = "@string/subscription_ocr_key"
				android:summaryOff = "@string/subscribedOff"
				android:summaryOn = "@string/subscribedOn"
				android:title = "@string/subscription_ocr_label" />
		</PreferenceScreen>
	</PreferenceCategory>

	<PreferenceCategory android:title = "UI">
		<ListPreference
			android:defaultValue = "@string/theme_dark"
			android:entries = "@array/theme_values"
			android:entryValues = "@array/theme_values"
			android:icon = "@drawable/theme"
			android:key = "@string/theme_key"
			android:title = "@string/theme_label" />

		<SwitchPreference
			android:defaultValue = "@string/summaryOff"
			android:icon = "@drawable/navigation"
			android:key = "@string/colouredNavigationBar_key"
			android:summaryOff = "@string/summaryOff"
			android:summaryOn = "@string/summaryOn"
			android:title = "@string/colouredNavigationBar_label" />
	</PreferenceCategory>

	<PreferenceCategory android:title = "Profile">
		<Preference
			android:icon = "@drawable/password"
			android:key = "forgotPassword"
			android:title = "Forgot Password" />
		<Preference
			android:icon = "@drawable/logout"
			android:key = "logout"
			android:title = "Logout" />
	</PreferenceCategory>
</PreferenceScreen>
